#! /bin/bash

# /dev/tarot output regex
TEST_REGEX="[+-](T(2[0-1]|1[0-9]|[0-9])|[CSPW](1[0-4]|[1-9])){1}"

# grab a card
TAROT="$(sudo head -c 4 /dev/tarot | tr -d '\0')";

# write to .tarot
echo $TAROT > .tarot

# read from .tarot
cat .tarot

# test regex and exit
if [[ "$TAROT" =~ $TEST_REGEX ]]; then
  exit 0;
else
  exit 1;
fi
